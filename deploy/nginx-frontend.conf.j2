server {
    listen 443 ssl;
    server_name {{ inventory_hostname }};

    ssl_certificate {{ ssl_dir }}/frontend-selfsigned.crt;
    ssl_certificate_key {{ ssl_dir }}/frontend-selfsigned.key;

    location / {
        proxy_pass http://localhost:3000; # Если фронт на 3000 порту внутри docker
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}

server {
    listen 80;
    server_name {{ inventory_hostname }};
    return 301 https://$host$request_uri;
}
